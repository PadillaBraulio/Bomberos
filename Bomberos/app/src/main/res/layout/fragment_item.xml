<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/default_phone"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_below="@+id/phone"
        android:text="@string/default_date"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_latitude"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignTop="@+id/date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_longitude"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignTop="@+id/phone"
        android:layout_alignRight="@+id/latitude"
        android:layout_alignEnd="@+id/latitude" />

</RelativeLayout>
